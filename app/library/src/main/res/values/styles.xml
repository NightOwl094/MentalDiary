<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MentalDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:datePickerDialogTheme">@style/datePickerDialogStyle</item>
    </style>

    <style name="datePickerDialogStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimaryInverse">#000</item>
        <item name="android:textColorSecondaryInverse">#000</item>

        <item name="android:datePickerStyle">@style/datePickerStyle1</item>
    </style>

    <style name="datePickerStyle1" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/primary_color</item>
    </style>

</resources>